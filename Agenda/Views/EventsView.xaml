<UserControl x:Class="Agenda.Views.EventsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Agenda.Views"
             mc:Ignorable="d"
             d:DesignHeight="700" d:DesignWidth="1000"
             Background="#F4F6FA">

    <UserControl.Resources>
        <!-- Styles pour les boutons -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="#4285F4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3367D6"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource ActionButton}">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#CCCCCC"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Style pour les événements dans le calendrier -->
        <Style x:Key="CalendarEventStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>

        <!-- Style pour le calendrier -->
        <Style x:Key="CalendarDayStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="0.5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="2"/>
        </Style>

        <!-- Style pour les jours du calendrier -->
        <Style x:Key="DayHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#555555"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Style pour les TextBox -->
        <Style x:Key="InputStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>

        <!-- Style pour les DatePicker -->
        <Style x:Key="DatePickerStyle" TargetType="DatePicker">
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Margin" Value="0,5"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- En-tête avec titre et boutons -->
        <Grid Grid.Row="0" Margin="20,20,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Google Calendar" FontSize="28" FontWeight="Bold" Foreground="#333333"/>
                <TextBlock x:Name="CurrentMonthText" Text=" - Avril 2025" FontSize="28" FontWeight="Light" Foreground="#666666"/>
            </StackPanel>

            <Button Grid.Column="1" Content="Aujourd'hui" Style="{StaticResource SecondaryButton}" Margin="0,0,10,0" Click="TodayButton_Click"/>
            <Button Grid.Column="2" Content="+ Nouvel événement" Style="{StaticResource ActionButton}" Click="NewEventButton_Click"/>
        </Grid>

        <!-- Contenu principal avec calendrier et détails -->
        <Grid Grid.Row="1" Margin="20,0,20,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>

            <!-- Calendrier -->
            <Border Grid.Column="0" Background="White" CornerRadius="8" Margin="0,0,10,0" Padding="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Navigation du mois -->
                    <Grid Grid.Row="0" Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" Content="&lt;" Width="30" Height="30" Style="{StaticResource SecondaryButton}" Click="PreviousMonth_Click"/>
                        <Button Grid.Column="1" Content="&gt;" Width="30" Height="30" Style="{StaticResource SecondaryButton}" Margin="5,0,0,0" Click="NextMonth_Click"/>
                    </Grid>

                    <!-- Jours de la semaine -->
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Lun" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="1" Text="Mar" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="2" Text="Mer" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="3" Text="Jeu" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="4" Text="Ven" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="5" Text="Sam" Style="{StaticResource DayHeaderStyle}"/>
                        <TextBlock Grid.Column="6" Text="Dim" Style="{StaticResource DayHeaderStyle}"/>
                    </Grid>

                    <!-- Grille du calendrier -->
                    <Grid x:Name="CalendarGrid" Grid.Row="2">
                        <!-- Cette grille sera remplie dynamiquement avec les jours et événements -->
                    </Grid>
                </Grid>
            </Border>

            <!-- Panneau latéral pour les détails et la création d'événements -->
            <Border Grid.Column="1" Background="White" CornerRadius="8" Padding="15">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Titre du panneau -->
                    <TextBlock Grid.Row="0" x:Name="SidebarTitle" Text="Détails de l'événement" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,15"/>

                    <!-- Contenu du panneau (détails ou formulaire) -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <!-- Panneau de détails d'événement -->
                        <Grid x:Name="EventDetailsPanel" Visibility="Collapsed">
                            <StackPanel>
                                <TextBlock x:Name="EventTitleText" Text="Titre de l'événement" FontSize="20" FontWeight="Bold" TextWrapping="Wrap"/>
                                <TextBlock x:Name="EventTimeText" Text="10 avril 2025, 14:00 - 15:00" Margin="0,10,0,0" Foreground="#666666"/>
                                <TextBlock x:Name="EventDurationText" Text="1h00" Margin="0,5,0,0" Foreground="#666666"/>

                                <Separator Margin="0,15"/>

                                <TextBlock Text="Lieu" FontWeight="SemiBold" Margin="0,10,0,5"/>
                                <TextBlock x:Name="EventLocationText" Text="Aucun lieu spécifié" Foreground="#666666"/>

                                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBlock x:Name="EventDescriptionText" Text="Aucune description" TextWrapping="Wrap" Foreground="#666666"/>

                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                    <Button Content="Modifier" Style="{StaticResource ActionButton}" Click="EditEvent_Click"/>
                                    <Button Content="Supprimer" Style="{StaticResource SecondaryButton}" Margin="10,0,0,0" Click="DeleteEvent_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <!-- Formulaire de création/modification d'événement -->
                        <Grid x:Name="EventFormPanel" Visibility="Visible">
                            <StackPanel>
                                <TextBlock Text="Titre" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                <TextBox x:Name="EventTitleInput" Style="{StaticResource InputStyle}" Text=""/>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Date de début" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <DatePicker x:Name="StartDatePicker" Style="{StaticResource DatePickerStyle}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="Heure de début" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="StartTimePicker" Padding="10,8" Margin="0,5"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,5,0">
                                        <TextBlock Text="Date de fin" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <DatePicker x:Name="EndDatePicker" Style="{StaticResource DatePickerStyle}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="5,0,0,0">
                                        <TextBlock Text="Heure de fin" FontWeight="SemiBold" Margin="0,0,0,5"/>
                                        <ComboBox x:Name="EndTimePicker" Padding="10,8" Margin="0,5"/>
                                    </StackPanel>
                                </Grid>

                                <CheckBox x:Name="AllDayCheckbox" Content="Toute la journée" Margin="0,10,0,0" Checked="AllDayCheckbox_CheckedChanged" Unchecked="AllDayCheckbox_CheckedChanged"/>

                                <TextBlock Text="Lieu" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBox x:Name="LocationInput" Style="{StaticResource InputStyle}"/>

                                <TextBlock Text="Description" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBox x:Name="DescriptionInput" Style="{StaticResource InputStyle}" Height="100" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

                                <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                                    <Button Content="Enregistrer" Style="{StaticResource ActionButton}" Click="SaveEvent_Click"/>
                                    <Button Content="Annuler" Style="{StaticResource SecondaryButton}" Margin="10,0,0,0" Click="CancelEdit_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>
                    </ScrollViewer>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>