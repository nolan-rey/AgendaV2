<UserControl x:Class="Agenda.Views.ContactsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Agenda.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#F4F6FA">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Contacts" FontSize="28" FontWeight="Bold" Margin="0,0,0,20"/>

            <Button Content="+ Ajouter un contact"
                    Width="180"
                    Height="35"
                    HorizontalAlignment="Right"
                    Margin="0,0,0,20"
                    Click="AddContact_Click"
                    Background="#6C3CE6"
                    Foreground="White"
                    FontWeight="SemiBold"
                    BorderThickness="0"
                    Cursor="Hand"/>

            <!-- Barre de recherche avec faux placeholder -->
            <Border Width="300"
        Height="38"
        CornerRadius="8"
        Background="White"
        BorderBrush="#DDD"
        BorderThickness="1"
        Margin="0,0,0,20"
        HorizontalAlignment="Left">
                <Grid>
                    <!-- Icône loupe -->
                    <TextBlock Text="🔍"
                   FontSize="14"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"
                   Foreground="#999"/>

                    <!-- Zone de texte -->
                    <TextBox x:Name="SearchBox"
                 Margin="30,0,30,0"
                 BorderThickness="0"
                 Background="Transparent"
                 FontSize="14"
                 VerticalContentAlignment="Center"
                 TextChanged="SearchBox_TextChanged"/>

                    <!-- Bouton clear -->
                    <Button x:Name="ClearSearchButton"
                Content="✖"
                FontSize="12"
                Width="20"
                Height="20"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,10,0"
                Background="Transparent"
                BorderThickness="0"
                Cursor="Hand"
                Foreground="#999"
                Click="ClearSearchButton_Click"
                Visibility="Collapsed"/>
                </Grid>
            </Border>


            <!-- Liste des contacts -->
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <ListView x:Name="ContactsListView"
                          HorizontalContentAlignment="Stretch"
                          BorderThickness="0"
                          Background="Transparent"
                          Margin="0,0,0,20">

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,10" Padding="10" CornerRadius="10" Background="White">
                                <StackPanel>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding FirstName}" FontSize="16" FontWeight="Bold" Margin="0,0,8,0"/>
                                            <TextBlock Text="{Binding LastName}" FontSize="16"/>
                                        </StackPanel>

                                        <Button Grid.Column="1" Content="✏️" Width="30" Margin="5,0" 
                                                ToolTip="Modifier" Click="EditContact_Click" Cursor="Hand"/>

                                        <Button Grid.Column="2" Content="🗑️" Width="30" Margin="5,0"
                                                ToolTip="Supprimer" Click="DeleteContact_Click"
                                                Background="#E63946" Foreground="White" BorderBrush="#E63946" Cursor="Hand"/>

                                        <ToggleButton Grid.Column="3"
                                                      x:Name="Toggle"
                                                      Width="30"
                                                      Height="30"
                                                      Margin="5,0"
                                                      Content="⮟"
                                                      Background="Transparent"
                                                      BorderThickness="0"
                                                      Cursor="Hand"/>
                                    </Grid>

                                    <StackPanel x:Name="DetailsPanel" Visibility="Collapsed" Margin="10,10,0,0">
                                        <TextBlock Text="Email :" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Email}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Téléphone :" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding PhoneNumber}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Adresse :" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding Address}" Margin="0,0,0,8"/>

                                        <TextBlock Text="Date de naissance :" FontWeight="SemiBold"/>
                                        <TextBlock Text="{Binding BirthDate}" Margin="0,0,0,8"/>
                                    </StackPanel>

                                    <StackPanel.Triggers>
                                        <EventTrigger RoutedEvent="ToggleButton.Checked" SourceName="Toggle">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DetailsPanel" Storyboard.TargetProperty="Visibility">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Visible}"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Toggle" Storyboard.TargetProperty="Content">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="⮝"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>

                                        <EventTrigger RoutedEvent="ToggleButton.Unchecked" SourceName="Toggle">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="DetailsPanel" Storyboard.TargetProperty="Visibility">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="{x:Static Visibility.Collapsed}"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                    <ObjectAnimationUsingKeyFrames Storyboard.TargetName="Toggle" Storyboard.TargetProperty="Content">
                                                        <DiscreteObjectKeyFrame KeyTime="0:0:0" Value="⮟"/>
                                                    </ObjectAnimationUsingKeyFrames>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </StackPanel.Triggers>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollViewer>
        </StackPanel>
    </Grid>
</UserControl>
